# Configuración del entorno para Laragon
NODE_ENV=development
PORT=3001
DB_PATH=./data/investments.db

# Claves de API (obtén las tuyas en los enlaces de abajo)
ALPHAVANTAGE_KEY=tu_clave_alpha_vantage_aqui
POLYGON_KEY=tu_clave_polygon_aqui

# Zona horaria
TZ=America/Lima

# Configuración de logs
LOG_LEVEL=info
LOG_FILE=./logs/combined.log
ERROR_LOG_FILE=./logs/error.log

# Configuración de base de datos
DB_BACKUP_ENABLED=true
DB_BACKUP_INTERVAL=24

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# URLs de APIs externas
ALPHAVANTAGE_BASE_URL=https://www.alphavantage.co/query
POLYGON_BASE_URL=https://api.polygon.io

# Configuración de CORS
CORS_ORIGIN=http://localhost:5173

# ===========================================
# INSTRUCCIONES PARA OBTENER CLAVES DE API:
# ===========================================
# 
# Alpha Vantage:
# 1. Ve a: https://www.alphavantage.co/support/#api-key
# 2. Regístrate gratuitamente
# 3. Copia tu clave y reemplaza 'tu_clave_alpha_vantage_aqui'
#
# Polygon.io:
# 1. Ve a: https://polygon.io/dashboard
# 2. Crea una cuenta gratuita
# 3. Copia tu clave y reemplaza 'tu_clave_polygon_aqui'
#
# Nota: Las claves gratuitas tienen límites de uso diario

